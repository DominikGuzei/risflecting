<%= form_for [:intern, @user], :url => intern_accounts_path, :html => { :class => 'form-horizontal well'} do |form| %>
  <%= content_tag :legend, 'Neuen Benutzer einladen' %>

  <fieldset>
    <%= form.email_field :email, :class => 'span4', :label => { :text => 'E-Mail' } %>

    <%= form.select(:role_id, options_for_select([['Pool', Role.find_by_name('Member').id], ['Steuergruppe', Role.find_by_name('Coordinator').id], ['Administratoren', Role.find_by_name('Admin').id]]), :class => 'span4', :label => { :text => 'Gruppe' }) %>

    <div class="form-actions">
      <%= form.submit 'Benutzer einladen' %>
    </div>
  </fieldset>
<% end %>
