<%= form_for [:intern, @appointment], :html => { :class => 'form-horizontal well', :id => 'appointment-edit-form'} do |form| %>
  <fieldset>
    <%= content_tag :legend, 'Termin bearbeiten' %>
    <% if @appointment.errors.any? %>
    <div class="alert alert-error"><strong>Achtung!</strong> Beim Versuch den Termin zu speichern sind Fehler aufgetreten.</div>
    <% end %>
    <%= form.text_field :title, :class => 'span6', :label => { :text => 'Titel' } %>
    <%= form.text_area :description, :rows => 10, :class => 'span6', :label => { :text => 'Beschreibung' } %>
    <%= form.text_field :location, :class => 'span6', :label => { :text => 'Ort / Treffpunkt' } %>
    <%= form.datetime_picker :starttime, :label => { :text => 'Beginn' }, :class => 'span2' %>
    <%= form.datetime_picker :endtime, :label => { :text => 'Ende' }, :class => 'span2' %>
    <div class="form-actions">
      <%= form.submit 'Ã„nderungen speichern' %>
      <%= link_to 'Abbrechen', :back, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
