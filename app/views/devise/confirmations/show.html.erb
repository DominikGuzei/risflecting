<h2>Profil erstellen</h2>

<%= form_for resource, :as => resource_name, :url => intern_user_confirm_path do |f| %>

  <%= devise_error_messages! %>

  <div><%= f.label :forename %><br />
  <%= f.text_field :forename %></div>

  <div><%= f.label :surname %><br />
  <%= f.text_field :surname %></div>

  <div><%= f.label :phone %><br />
  <%= f.text_field :phone %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <%= f.hidden_field :confirmation_token %>

  <div><%= f.submit "Speichern" %></div>
<% end %>

